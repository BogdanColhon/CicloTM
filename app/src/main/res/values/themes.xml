<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CicloTM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navBar_color</item>
        <item name="colorPrimaryVariant">@color/navBar_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#3A3A3A</item>
        <item name="colorSecondaryVariant">#3A3A3A</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:actionOverflowButtonStyle">@style/MyTheme</item>
        <item name="android:actionMenuTextColor">@color/green</item>


    </style>
    <style name="Theme.CicloTM.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CicloTM.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CicloTM.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyTheme" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_baseline_more_vert_24</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/navBar_color</item>
    </style>
</resources>