<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    tools:context=".TurePostActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/rideTitleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:hint="Titlu" />


        <TextView
            android:id="@+id/distanceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distanța:"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_linear_layout"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/distanceEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="0.7"
                android:ems="10"
                android:background="@null"
                android:hint="-"
                android:inputType="text" />

            <TextView
                android:id="@+id/kmTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textColor="@color/black"
                android:text="km" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>
        <TextView
            android:id="@+id/durationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Durata:"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_linear_layout"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/durationEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="0.7"
                android:ems="10"
                android:background="@null"
                android:hint="-"
                android:inputType="text" />

           <Spinner
               android:id="@+id/timeUnitSpinner"
               android:layout_width="0dp"
               android:layout_weight="1.5"
               android:layout_height="wrap_content"></Spinner>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>
        <TextView
            android:id="@+id/departureTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plecare:"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_linear_layout"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/startPointTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Locația:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/startPointEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="3"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:background="@null"
                android:hint="-"
                android:inputType="text" />
            <TextView
                android:id="@+id/startTimeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Ora:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/startTimeEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="2"
                android:ems="10"
                android:background="@null"
                android:hint="-"
                android:inputType="text" />
        </LinearLayout>
        <TextView
            android:id="@+id/descriptionHeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalii:"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="top"
            android:background="@drawable/custom_linear_layout"
            android:inputType="textMultiLine"
            android:hint="-" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>