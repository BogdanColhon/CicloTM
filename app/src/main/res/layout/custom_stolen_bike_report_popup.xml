<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/reportColor"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/reportText"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Raport furt"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_report"
            android:orientation="vertical"
            android:paddingStart="15dip"
            android:paddingTop="20dip"
            android:paddingEnd="15dip"
            android:paddingBottom="20dip">

            <TextView
                android:id="@+id/generalsTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info general"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Ora"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/addressReportEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Adresa"
                android:textSize="15dp" />


            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_insert_photo_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_report"
            android:orientation="vertical"
            android:paddingStart="15dip"
            android:paddingTop="20dip"
            android:paddingEnd="15dip"
            android:paddingBottom="20dip">

            <TextView
                android:id="@+id/bikeInfoTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info bicicletă"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/brandReportEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="marca"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/modelReportEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="model"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/colorReportEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="culoare"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_insert_photo_24"  />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_report"
            android:orientation="vertical"
            android:paddingStart="15dip"
            android:paddingTop="20dip"
            android:paddingEnd="15dip"
            android:paddingBottom="20dip">

            <TextView
                android:id="@+id/thiefInfoTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info hoț"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/thiefDescriptionReportEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="descriere"
                android:textSize="15dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:clickable="true"
                android:onClick="showStolenBikeReportPopup"
                android:src="@drawable/ic_baseline_check_24"
                app:backgroundTint="@color/black" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

