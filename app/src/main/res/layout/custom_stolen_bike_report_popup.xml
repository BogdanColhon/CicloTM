<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/reportColor"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/reportText"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Raport furt"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_report"
            android:orientation="vertical"
            android:paddingStart="15dip"
            android:paddingTop="20dip"
            android:paddingEnd="15dip"
            android:paddingBottom="20dip">

            <TextView
                android:id="@+id/generalsTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info general"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="data furtului"
                android:background="@null"
                android:textSize="@dimen/report_text_size" />

            <EditText
                android:id="@+id/addressReportEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="adresa"
                android:textSize="@dimen/report_text_size" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/photoLocationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Poză locație (opțional)" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_insert_photo_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_report"
            android:orientation="vertical"
            android:paddingStart="15dip"
            android:paddingTop="20dip"
            android:paddingEnd="15dip"
            android:paddingBottom="20dip">

            <TextView
                android:id="@+id/bikeInfoTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info bicicletă"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/brandReportEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="marca"
                android:background="@null"
                android:textSize="@dimen/report_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/colorReportEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="culoare"
                    android:textSize="@dimen/report_text_size" />

                <Spinner
                    android:id="@+id/modelReportSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <EditText
                android:id="@+id/bikeDescriptionReportEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="@dimen/report_text_size"
                android:inputType="textMultiLine"
                android:hint="descriere.." />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/photoBikeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Poză bicicletă (opțional)" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_insert_photo_24" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_report"
            android:orientation="vertical"
            android:paddingStart="15dip"
            android:paddingTop="20dip"
            android:paddingEnd="15dip"
            android:paddingBottom="20dip">

            <TextView
                android:id="@+id/thiefInfoTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info hoț"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/thiefDescriptionReportEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="descriere.."
                android:inputType="textMultiLine"
                android:background="@null"
                android:textSize="@dimen/report_text_size" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:clickable="true"
                android:onClick="showStolenBikeReportPopup"
                android:src="@drawable/ic_baseline_check_24"
                app:backgroundTint="@color/black" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

