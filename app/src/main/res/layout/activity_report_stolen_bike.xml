<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportStolenBikeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/reportColor"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/reportText"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Raport furt"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/generalsTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General"
                android:textColor="@color/black"
                android:paddingStart="15dip"
                android:textSize="20dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_report"
                android:orientation="vertical"
                android:paddingStart="15dip"
                android:paddingTop="20dip"
                android:paddingEnd="15dip"
                android:paddingBottom="20dip">


                <TextView
                    android:id="@+id/dateReportTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="data furtului"
                    android:background="@null"
                    android:textSize="@dimen/report_text_size" />

                <TextView
                    android:id="@+id/addressReportTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="adresa"
                    android:textSize="@dimen/report_text_size" />


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/photoLocationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Poză locație (opțional)" />

                <ImageView
                    android:id="@+id/locationReportImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_insert_photo_24" />

            </LinearLayout>

            <TextView
                android:id="@+id/bikeInfoTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bicicletă"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:paddingStart="15dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_report"
                android:orientation="vertical"
                android:paddingStart="15dip"
                android:paddingTop="20dip"
                android:paddingEnd="15dip"
                android:paddingBottom="20dip">


                <EditText
                    android:id="@+id/brandReportEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="marca"
                    android:background="@null"
                    android:textSize="@dimen/report_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/colorReportEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="culoare"
                        android:textSize="@dimen/report_text_size" />

                    <Spinner
                        android:id="@+id/modelReportSpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <EditText
                    android:id="@+id/bikeDescriptionReportEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="@dimen/report_text_size"
                    android:inputType="textMultiLine"
                    android:hint="descriere.." />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/photoBikeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Poză bicicletă (opțional)" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/stolenBikeImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_baseline_insert_photo_24" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/thiefInfoTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoț"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:paddingStart="15dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_report"
                android:orientation="vertical"
                android:paddingStart="15dip"
                android:paddingTop="20dip"
                android:paddingEnd="15dip"
                android:paddingBottom="20dip">



                <EditText
                    android:id="@+id/thiefDescriptionReportEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="descriere.."
                    android:inputType="textMultiLine"
                    android:background="@null"
                    android:textSize="@dimen/report_text_size" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sendReportButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:clickable="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_baseline_check_24"
            app:backgroundTint="@color/black" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>