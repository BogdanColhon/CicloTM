<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".ReportStolenBikeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reportText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Raport furt"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop = "20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/custom_border">

                <TextView
                    android:id="@+id/generalsTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="15dp"
                    android:text="General"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECECEC"
                android:layout_marginBottom="15dp"
                android:orientation="vertical"
                android:paddingStart="15dip"
                android:paddingTop="20dip"
                android:paddingEnd="15dip"
                android:paddingBottom="20dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Data furtului: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/report_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/reportStolenDateTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="―"
                        android:textColor="#3A3A3A"
                        android:textSize="@dimen/report_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Adresa: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/report_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/reportStolenAddressTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="―"
                        android:textColor="#3A3A3A"
                        android:textSize="@dimen/report_text_size" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Telefon: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/report_text_size"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/reportStolenPhoneEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="―"
                        android:textColor="#3A3A3A"
                        android:textSize="@dimen/report_text_size" />

                </LinearLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/photoLocationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Poză locație (opțional)"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/locationReportImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_baseline_insert_photo_24" />

            </LinearLayout>

                <TextView
                    android:id="@+id/bikeInfoTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="15dp"
                    android:text="Bicicletă"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECECEC"
                android:orientation="vertical"
                android:layout_marginBottom="15dp"
                android:paddingStart="15dip"
                android:paddingTop="20dip"
                android:paddingEnd="15dip"
                android:paddingBottom="20dip">


                <EditText
                    android:id="@+id/brandReportEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Marca"
                    android:textColor="@color/black"
                    android:textSize="@dimen/report_text_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Culoare"
                        android:textColor="@color/black"
                        android:textSize="@dimen/report_text_size"
                        android:layout_marginEnd="10dp"
                        android:textStyle="bold" />
                    <Spinner
                        android:id="@+id/spinner_color"
                        android:layout_width="95dp"
                        android:layout_height="25dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:spinnerMode="dialog"
                        android:textColor="@color/black"
                        />


                    <Spinner
                        android:id="@+id/modelReportSpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"

                        android:layout_weight="1" />

                </LinearLayout>

                <EditText
                    android:id="@+id/bikeDescriptionReportEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Descriere.."
                    android:inputType="textMultiLine"
                    android:textColor="#3A3A3A"
                    android:textSize="@dimen/report_text_size"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/photoBikeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Poză bicicletă (opțional)"
                    android:textColor="@color/black" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/stolenBikeImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/ic_baseline_insert_photo_24" />
                </LinearLayout>

            </LinearLayout>

                <TextView
                    android:id="@+id/thiefInfoTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="15dp"
                    android:text="Hoț"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECECEC"
                android:orientation="vertical"
                android:paddingStart="15dip"
                android:paddingTop="20dip"
                android:paddingEnd="15dip"
                android:paddingBottom="20dip">


                <EditText
                    android:id="@+id/thiefDescriptionReportEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Descriere.."
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:textSize="@dimen/report_text_size"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sendReportButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:clickable="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_baseline_check_24"
            app:backgroundTint="@color/black" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>