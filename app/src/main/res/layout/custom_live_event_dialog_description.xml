<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/liveEventDialogDescriptionIconImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        ></ImageView>

    <TextView
        android:id="@+id/liveEventDialogDescriptionTypeImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        ></TextView>

    <TextView
        android:id="@+id/liveEventDialogDescriptionDateImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        ></TextView>

    <EditText
        android:id="@+id/liveEventDialogDescriptionEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Descriere"
        android:textColor="#3A3A3A"></EditText>

    <Button
        android:id="@+id/liveEventDialogDescriptionPostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="PosteazÄƒ"></Button>

</LinearLayout>