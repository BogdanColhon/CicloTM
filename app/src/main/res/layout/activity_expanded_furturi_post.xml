<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    tools:context=".ExpandedFurturiPostActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_photo"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:layout_weight="0"
                    android:src="@drawable/user_photo" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="16"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/upperTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:singleLine="true"
                        android:text="username"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/lowerTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00.00.2000"
                        android:textColor="@color/black"
                        android:textSize="15dp" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_linear_layout_expanded_theft"
                android:padding="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="General"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="Data furtului: "
                        android:textSize="@dimen/expanded_report_description"
                        />

                    <TextView
                        android:id="@+id/theftDateTextView"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/expanded_report_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="Locul: "
                        android:textSize="@dimen/expanded_report_description"
                        />

                    <TextView
                        android:id="@+id/theftAddressTextView"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/expanded_report_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/placeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_baseline_insert_photo_24" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:padding="20dp"
                android:background="@drawable/custom_linear_layout_expanded_theft"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="Bicicletă"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="Marca: "
                        android:textSize="@dimen/expanded_report_description"
                        />

                    <TextView
                        android:id="@+id/theftBikeBrandTextView"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/expanded_report_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="Model: "
                        android:textSize="@dimen/expanded_report_description"
                        />

                    <TextView
                        android:id="@+id/theftBikeModelTextView"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/expanded_report_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="Tip: "
                        android:textSize="@dimen/expanded_report_description"
                        />

                    <TextView
                        android:id="@+id/theftBikeTypeTextView"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/expanded_report_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:textSize="@dimen/expanded_report_description"
                        android:text="Culoare: " />

                    <TextView
                        android:id="@+id/theftBikeColorTextView"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/expanded_report_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="Descriere: "
                        android:textSize="@dimen/expanded_report_description"
                        />

                    <TextView
                        android:id="@+id/theftBikeDescriptionTextView"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/expanded_report_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/bikeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_baseline_insert_photo_24" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_linear_layout_expanded_theft"
                android:padding="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="Hoț"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="Descriere: "
                        android:textSize="@dimen/expanded_report_description"
                        />

                    <TextView
                        android:id="@+id/thiefDescriptionTextView"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/expanded_report_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />

                </LinearLayout>


           </LinearLayout>
            <Button
                android:id="@+id/expandedFurturiPostContactButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contactează proprietarul"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:textSize="16sp"/>
            </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>