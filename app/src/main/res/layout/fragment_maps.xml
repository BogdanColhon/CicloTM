<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/reportFloatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:backgroundTint="@color/black"
        android:layout_marginTop="100dip"
        android:layout_marginEnd="15dip"
        android:scaleType="center"
        android:clickable="true"
        app:maxImageSize="35dp"
        android:src="@drawable/report_theft" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/liveEventFloatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dip"
        android:layout_marginEnd="15dip"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/ic_baseline_add_24"
        android:visibility="invisible"
        app:backgroundTint="@color/black"
        app:maxImageSize="35dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/layersFloatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/reportFloatingButton"
        app:backgroundTint="@color/black"
        android:layout_marginTop="20dip"
        android:layout_marginEnd="15dip"
        app:maxImageSize="30dp"
        android:clickable="true"
        android:src="@drawable/map_layers" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>